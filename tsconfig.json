{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/loaders/*": ["loaders/*"],
      "@/models/*": ["models/*"],
      "@/services/*": ["services/*"],
      "@/types/*": ["types/*"],
      "@/config/*": ["config/*"]
    },
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "noLib": false,
    "allowJs": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": false
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "outDir": "./dist"
}
